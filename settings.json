{
	"window.titleBarStyle": "custom",
	"workbench.colorTheme": "Monokai",
	"editor.codeActionsOnSave": {
		"value": "always"
	},

	"workbench.colorCustomizations": {
		// Letras de menú en general.
		"foreground": "#a7abac",
		// Color de fondo del Editor.
		"editor.background": "#141414",
		// Color de fondo de Termianl.
		"panel.background": "#050505",
		// Color de archivo seleccionado en el Lateral.
		"list.activeSelectionBackground": "#14c8d480",
		// Background del navegador izquierdo.
		"sideBar.background": "#0c0c0c",
		// color del cursor. (donde escribís).
		"editorCursor.foreground": "#00adb3",
		// Color de los números laterales.
		"editorLineNumber.foreground": "#4c7474",
		// Color de Área Selecionada.
		"editor.selectionBackground": "#7979798f",
		// Color de Código Plegado.
		"editor.foldBackground": "#47944409",
		// Color de la línea donde está el cursor.
		"editor.lineHighlightBackground": "#ffffff1e",

		"editor.findMatchHighlightBackground": "#e253ffab", // Color de fondo para las coincidencias de búsqueda resaltadas

		"editor.selectionHighlightBackground": "#79797946", // Color de fondo para las coincidencias no exactas de la selección

		"editorIndentGuide.activeBackground1": "#ffc40017",
		"editorIndentGuide.activeBackground2": "#ff000017",
		"editorIndentGuide.activeBackground3": "#a5128317",
		"editorIndentGuide.activeBackground4": "#ff8c0017",
		"editorIndentGuide.activeBackground5": "#ffc40017",
		"editorIndentGuide.activeBackground6": "#ffc40017",

		// non-active indent guide colors
		"editorIndentGuide.background1": "#0c48a317",
		"editorIndentGuide.background2": "#00e5ff17",
		"editorIndentGuide.background3": "#00e5ff17",
		"editorIndentGuide.background4": "#00e5ff17",
		"editorIndentGuide.background5": "#00e5ff17",
		"editorIndentGuide.background6": "#00e5ff17",
		//
		// "terminal.background": "#131212",
		// "terminal.foreground": "#eb8e16",
		"terminal.ansiBlack": "#1D2021",
		// "terminal.ansiBrightBlack": "#665C54",
		// "terminal.ansiBrightBlue": "#0D6678",
		// "terminal.ansiBrightCyan": "#8BA59B",
		"terminal.ansiBrightGreen": "#348516c5",
		// 		"terminal.ansiBrightMagenta": "#8F4673",
		// 		"terminal.ansiBrightRed": "#FB543F",
		// "terminal.ansiBrightWhite": "#FDF4C1",
		// 		"terminal.ansiBrightYellow": "#FAC03B",
		"terminal.ansiBlue": "#0a92bb",
		// "terminal.ansiCyan": "#8BA59B",
		"terminal.ansiGreen": "#5c9724"
		// 		"terminal.ansiMagenta": "#8F4673",
		// "terminal.ansiRed": "#FB543F"
		// "terminal.ansiWhite": "#141414"
		// "terminal.ansiYellow": "#FAC03B",
	},

	"editor.cursorBlinking": "expand",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.cursorSurroundingLines": 2,
	"editor.cursorWidth": 4,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"explorer.confirmDelete": false,
	"launch": {
		"configurations": [],
		"compounds": []
	},

	// Config Prettier ----------------------------
	"security.workspace.trust.untrustedFiles": "open",
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"editor.defaultFormatter": "esbenp.prettier-vscode",

	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"prettier.arrowParens": "always",
	"prettier.bracketSameLine": false,
	"prettier.bracketSpacing": true,
	"prettier.embeddedLanguageFormatting": "auto",
	"prettier.htmlWhitespaceSensitivity": "css",
	"prettier.insertPragma": false,
	"prettier.jsxSingleQuote": true,
	"prettier.printWidth": 100,
	"prettier.proseWrap": "preserve",
	"prettier.quoteProps": "as-needed",
	"prettier.requirePragma": false,
	"prettier.semi": true,
	"prettier.singleQuote": true,
	"prettier.singleAttributePerLine": false,
	"prettier.trailingComma": "all",
	"prettier.useTabs": true,
	"prettier.resolveGlobalModules": true,
	"prettier.vueIndentScriptAndStyle": true,
	// -----------------------------------------

	"editor.formatOnSave": true,
	"editor.formatOnType": true,
	"scm.inputFontSize": 14,
	"editor.scrollbar.verticalScrollbarSize": 0,
	"editor.scrollbar.horizontalScrollbarSize": 20,
	"editor.stablePeek": true,
	"workbench.tree.expandMode": "doubleClick",
	"[scss]": {
		"editor.defaultFormatter": "vscode.css-language-features"
	},
	"editor.renderLineHighlight": "all",
	"editor.linkedEditing": true,
	"editor.renderLineHighlightOnlyWhenFocus": true,
	"editor.unfoldOnClickAfterEndOfLine": true,
	"highlight.regexes": {
		"((?:<!-- *)?(?:#| @||./\\*+|<!--|--|\\* @|{!|{{!--|{{!) *console.log(?:\\s*\\([^)]+\\))?:?)((?!\\w)(?: *-->| *\\*/| *!}| *--}}| *}}|(?= *(?:[^:]//|/\\*+|<!--|@|--|{!|{{!--|{{!))|(?: +[^\\n@]*?)(?= *(?:[^:]//|/\\*+|<!--|@|--(?!>)|{!|{{!--|{{!))|(?: +[^@\\n]+)?))": {
			"filterFileRegex": ".*(?<!CHANGELOG.md)$",
			"decorations": [
				{
					"overviewRulerColor": "",
					"backgroundColor": "rgba(200,200,200,.05)",
					"border": "1px solid rgba(200,50,00,.2)",
					"color": "",
					"fontWeight": ""
				}
			]
		}
	},
	"editor.suggest.showReferences": false,

	"workbench.editor.splitInGroupLayout": "vertical",
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"workbench.editor.highlightModifiedTabs": true,
	"editor.unicodeHighlight.nonBasicASCII": false,
	"activitusbar.activeColour": "skyblue",
	"update.mode": "start",
	"editor.inlineSuggest.enabled": true,
	"editor.fontSize": 15,

	"telemetry.telemetryLevel": "off",
	"explorer.confirmDragAndDrop": false,

	// This makes 'Tailwind CSS IntelliSense' extension,
	// sugest auto completion on objects called TW
	"tailwindCSS.experimental.classRegex": [
		["styles \\=([^;]*);", "'([^']*)'"],
		["styles \\=([^;]*);", "\"([^\"]*)\""],
		["styles \\=([^;]*);", "\\`([^\\`]*)\\`"]
	],
	"workbench.list.smoothScrolling": true,
	"editor.smoothScrolling": true,
	"activitusbar.combineWorkspaceSettings": true,
	"editor.minimap.maxColumn": 60,
	"editor.minimap.showSlider": "always",
	"editor.minimap.size": "fill",
	"window.confirmBeforeClose": "always",
	"editor.guides.bracketPairs": true,
	"workbench.activityBar.location": "hidden",
	"editor.stickyScroll.enabled": false,
	"notebook.stickyScroll.mode": "flat",
	"editor.tabSize": 2,
	"editor.cursorSurroundingLinesStyle": "all",
	"editor.comments.ignoreEmptyLines": false,

	"terminal.integrated.smoothScrolling": true,
	"terminal.integrated.defaultProfile.linux": "bash",
	"terminal.integrated.fontWeightBold": 500,
	"terminal.integrated.fontSize": 15,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"editor.largeFileOptimizations": false,

	"files.associations": {
		"*.css": "tailwindcss"
	},
	"liveServer.settings.donotVerifyTags": true,
	"codesnap.containerPadding": "1em",
	"codesnap.target": "window",

	// Color de los comentarios.
	"editor.tokenColorCustomizations": {
		"comments": "#a7aa05",
		"textMateRules": [
			{
				"scope": ["entity.name.type.interface", "entity.name.type"],
				"settings": {
					"fontStyle": "italic underline",
					"foreground": "#cf75e6"
				}
			},
			{
				"scope": ["storage.type.interface.ts", "storage.type.enum.ts"],
				"settings": {
					"fontStyle": "italic",
					// "foreground": "#ce3535"
					"foreground": "#35ceb4"
				}
			}
		]
	},
	"editor.suggest.showFolders": false,
	"explorer.autoReveal": false,
	"explorer.fileNesting.expand": false,
	"explorer.compactFolders": false

	// -----------------------------------------
}
