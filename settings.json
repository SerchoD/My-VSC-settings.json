{
	"window.titleBarStyle": "custom",
	"workbench.colorTheme": "Monokai",
	"editor.codeActionsOnSave": {
		"value": "never"
	},

	// Color de los comentarios.
	"editor.tokenColorCustomizations": {
		"comments": "#a7aa05"
	},

	"workbench.colorCustomizations": {
		// Letras de menú en general.
		"foreground": "#a7abac",
		// Color de fondo del Editor.
		"editor.background": "#141414",
		// Color de fondo de Termianl.
		"panel.background": "#050505",
		// Color de archivo seleccionado en el Lateral.
		"list.activeSelectionBackground": "#14c8d480",
		// Background del navegador izquierdo.
		"sideBar.background": "#0c0c0c",
		// color del cursor. (donde escribís).
		"editorCursor.foreground": "#00adb3",
		// Color de los números laterales.
		"editorLineNumber.foreground": "#4c7474",
		// Color de Área Selecionada.
		"editor.selectionBackground": "#79797933",
		// Color de Código Plegado.
		"editor.foldBackground": "#47944409",
		// Color de la línea donde está el cursor.
		"editor.lineHighlightBackground": "#ffffff10",

		"editorIndentGuide.activeBackground1": "#ffc40017",
		"editorIndentGuide.activeBackground2": "#ff000017",
		"editorIndentGuide.activeBackground3": "#a5128317",
		"editorIndentGuide.activeBackground4": "#ff8c0017",
		"editorIndentGuide.activeBackground5": "#ffc40017",
		"editorIndentGuide.activeBackground6": "#ffc40017",

		// non-active indent guide colors
		"editorIndentGuide.background1": "#0066ff17",
		"editorIndentGuide.background2": "#00e5ff17",
		"editorIndentGuide.background3": "#00e5ff17",
		"editorIndentGuide.background4": "#00e5ff17",
		"editorIndentGuide.background5": "#00e5ff17",
		"editorIndentGuide.background6": "#00e5ff17"
	},
	"editor.cursorBlinking": "expand",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.cursorSurroundingLines": 2,
	"editor.cursorWidth": 4,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"explorer.confirmDelete": false,
	"launch": {
		"configurations": [],
		"compounds": []
	},

	// Config Prettier ----------------------------
	"security.workspace.trust.untrustedFiles": "open",
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},

	"prettier.arrowParens": "always",
	"prettier.bracketSameLine": false,
	"prettier.bracketSpacing": true,
	"prettier.embeddedLanguageFormatting": "auto",
	"prettier.htmlWhitespaceSensitivity": "css",
	"prettier.insertPragma": false,
	"prettier.jsxSingleQuote": true,
	"prettier.printWidth": 80,
	"prettier.proseWrap": "preserve",
	"prettier.quoteProps": "as-needed",
	"prettier.requirePragma": false,
	"prettier.semi": true,
	"prettier.singleQuote": true,
	"prettier.trailingComma": "es5",
	"prettier.useTabs": true,
	"prettier.vueIndentScriptAndStyle": false,
	// -----------------------------------------

	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"editor.fontWeight": 1,
	"editor.formatOnType": true,
	"scm.inputFontSize": 14,
	"terminal.integrated.fontWeightBold": 1,
	"editor.scrollbar.verticalScrollbarSize": 0,
	"editor.scrollbar.horizontalScrollbarSize": 20,
	"terminal.integrated.fontSize": 15,
	"explorer.compactFolders": false,
	"editor.stablePeek": true,
	"workbench.tree.expandMode": "doubleClick",
	"[typescriptreact]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[scss]": {
		"editor.defaultFormatter": "vscode.css-language-features"
	},
	"editor.renderLineHighlight": "all",
	"editor.linkedEditing": true,
	"editor.renderLineHighlightOnlyWhenFocus": true,
	"editor.unfoldOnClickAfterEndOfLine": true,
	"highlight.regexes": {
		"((?:<!-- *)?(?:#| @||./\\*+|<!--|--|\\* @|{!|{{!--|{{!) *console.log(?:\\s*\\([^)]+\\))?:?)((?!\\w)(?: *-->| *\\*/| *!}| *--}}| *}}|(?= *(?:[^:]//|/\\*+|<!--|@|--|{!|{{!--|{{!))|(?: +[^\\n@]*?)(?= *(?:[^:]//|/\\*+|<!--|@|--(?!>)|{!|{{!--|{{!))|(?: +[^@\\n]+)?))": {
			"filterFileRegex": ".*(?<!CHANGELOG.md)$",
			"decorations": [
				{
					"overviewRulerColor": "",
					"backgroundColor": "rgba(200,200,200,.05)",
					"border": "1px solid rgba(200,50,00,.2)",
					"color": "",
					"fontWeight": ""
				}
			]
		}
	},
	"editor.suggest.showReferences": false,
	"gutterpreview.sourceFolder": "src, assets, frontend",
	"volar.autoCompleteRefs": true,
	"workbench.editor.splitInGroupLayout": "vertical",
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"codesnap.shutterAction": "copy",
	"codesnap.containerPadding": ".3em",
	"codesnap.showWindowControls": false,
	"codesnap.backgroundColor": "rgb(111 111 111)",
	"workbench.editor.highlightModifiedTabs": true,
	"editor.unicodeHighlight.nonBasicASCII": false,
	"activitusbar.activeColour": "skyblue",
	"update.mode": "start",
	"editor.inlineSuggest.enabled": true,
	"editor.fontSize": 15,
	"github.copilot.enable": {
		"*": false,
		"yaml": false,
		"plaintext": false,
		"markdown": false
	},
	"telemetry.telemetryLevel": "off",
	"explorer.confirmDragAndDrop": false,
	"tabnine.experimentalAutoImports": true,

	// This makes 'Tailwind CSS IntelliSense' extension,
	// sugest auto completion on objects called TW
	"tailwindCSS.experimental.classRegex": [
		["styles \\=([^;]*);", "'([^']*)'"],
		["styles \\=([^;]*);", "\"([^\"]*)\""],
		["styles \\=([^;]*);", "\\`([^\\`]*)\\`"]
	],
	"workbench.list.smoothScrolling": true,
	"terminal.integrated.smoothScrolling": true,
	"editor.smoothScrolling": true,
	"activitusbar.combineWorkspaceSettings": true,
	"editor.minimap.maxColumn": 60,
	"editor.minimap.showSlider": "always",
	"editor.minimap.size": "fill",
	"window.confirmBeforeClose": "always",
	"editor.guides.bracketPairs": true,
	"cSpell.language": "en es-ES",
	"workbench.activityBar.location": "hidden",
	"cSpell.userWords": ["firefox", "sercho", "tailwindcss"],
	"editor.stickyScroll.enabled": false,
	"notebook.stickyScroll.mode": "flat",
	"editor.tabSize": 2,
	"editor.cursorSurroundingLinesStyle": "all",
	"editor.comments.ignoreEmptyLines": false

	// -----------------------------------------
}
