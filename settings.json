{
    // --------------------------------- Base Config.
    "window.titleBarStyle": "custom",
    "workbench.colorTheme": "Monokai",
    "workbench.activityBar.visible": false,
    "editor.codeActionsOnSave": null,
    // ------------------ Comments color.
    "editor.tokenColorCustomizations": {
        "comments": "#9eafb3"
    },
    // --------------------------------- Text editor colors general
    "workbench.colorCustomizations": {
        // Letras de menú en general / general menues letters color.
        "foreground": "#dbdbdb",
        // Color de fondo del Editor. / text editor background color.
        "editor.background": "#141414",
        // Color de fondo de Termianl / Terminal background color.
        "panel.background": "#050505",
        // Color de archivo seleccionado en el Lateral / Selected archive/folder of side menu.
        "list.activeSelectionBackground": "#14c8d480",
        // Background del navegador izquierdo / Color background of side menu.
        "sideBar.background": "#0c0c0c",
        // color del cursor. (donde escribís) / Cursor color.
        "editorCursor.foreground": "#00aeff",
        // Color de los números laterales / Lane numbers color.
        "editorLineNumber.foreground": "#6f7cb6",
        // Color de Área Selecionada / Selected area color.
        "editor.selectionBackground": "#88c5b154",
        // Color de Código Plegado / Wrap code color.
        "editor.foldBackground": "#47944409",
        // Color de la línea donde está el cursor / Current lane color.
        "editor.lineHighlightBackground": "#4a86771c"
    },
    // --------------------------------------- Config of cursor, tab, etc
    "editor.cursorBlinking": "expand",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorSurroundingLines": 3,
    "editor.cursorSurroundingLinesStyle": "all",
    "editor.cursorWidth": 3,
    "editor.tabSize": 3,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "explorer.confirmDelete": false,
    // ---------------------------- Activate Prettier at Saving. (Ctrl + S)
    "editor.formatOnSave": true,
    "editor.fontSize": 13,
    // -----------------------
    "launch": {
        "configurations": [],
        "compounds": []
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "security.workspace.trust.untrustedFiles": "open",
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // --------------------------------------- Pettier config (Complement must be instaled).
    "prettier.proseWrap": "always",
    "workbench.activityBar.visible": false,
    "prettier.singleQuote": true,
    "prettier.useTabs": true,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.arrowParens": "always",
    "prettier.bracketSameLine": false,
    "prettier.bracketSpacing": true,
    "prettier.embeddedLanguageFormatting": "auto",
    "prettier.htmlWhitespaceSensitivity": "css",
    "prettier.insertPragma": false,
    "prettier.jsxSingleQuote": true,
    "prettier.printWidth": 80,
    "prettier.proseWrap": "preserve",
    "prettier.quoteProps": "as-needed",
    "prettier.requirePragma": false,
    "prettier.semi": true,
    "prettier.singleQuote": true,
    "prettier.tabWidth": 0,
    "prettier.trailingComma": "es5",
    "prettier.useTabs": true,
    "prettier.vueIndentScriptAndStyle": false,
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
}
